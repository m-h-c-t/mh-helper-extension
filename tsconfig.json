{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/scripts",
    "strict": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "DOM.Iterable"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "paths": {
      "@scripts/*":["src/scripts/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
